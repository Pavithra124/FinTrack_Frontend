        <activity
            android:name=".Categories"
            android:exported="false" />
        <activity
            android:name=".Rating"
            android:exported="false" />
        <activity
            android:name=".SignupActivity"
            android:exported="false" />
        <activity
            android:name=".FragmentScan"
            android:exported="false" />
        <activity
            android:name=".BudgetOverview"
            android:exported="false" />
        <activity
            android:name=".ExpenseAlert"
            android:exported="false" />
        <activity
            android:name=".PersonalDetails"
            android:exported="false" />
        <activity
            android:name=".BudgetAllocation"
            android:exported="false" />
        <activity
            android:name=".MyReciepts"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".Settings"
            android:exported="false"
            tools:ignore="MissingClass" />
        <activity
            android:name=".ForgotPassword"
