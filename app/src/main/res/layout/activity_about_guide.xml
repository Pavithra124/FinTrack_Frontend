<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top bar -->
        <TextView
            android:text="About and Guide"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp" />

        <!-- App Icon and Title -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:text="EXPENSE TRACK"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Smart Food Expense Management\nTrack, manage, and optimize your food expenses"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#666"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Key Features Section -->
        <TextView
            android:text="Key Features"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Key Feature Cards -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <!-- Repeat block for each feature -->
            <LinearLayout
                android:layout_marginBottom="8dp"
                android:background="#F5F5F5"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/export"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Expense Tracking"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Track all your food related expenses in one place"
                        android:textSize="12sp"
                        android:textColor="#666"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Budget Management -->
            <LinearLayout
                android:layout_marginBottom="8dp"
                android:background="#F5F5F5"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/budget"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Budget Management"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Set and monitor your food budgets"
                        android:textSize="12sp"
                        android:textColor="#666"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Receipt Scanner -->
            <LinearLayout
                android:layout_marginBottom="8dp"
                android:background="#F5F5F5"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/cameras"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Receipt Scanner"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Scan receipts for automatic expense entry"
                        android:textSize="12sp"
                        android:textColor="#666"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Categories -->
            <LinearLayout
                android:layout_marginBottom="8dp"
                android:background="#F5F5F5"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/cat"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Categories"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Organize expenses by custom categories"
                        android:textSize="12sp"
                        android:textColor="#666"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Getting Started -->
        <TextView
            android:text="Getting Started"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Create an Account\n2. Set Your Budget\n3. Add Expenses\n4. Track and Analyze"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="#444" />

        <!-- More Features -->
        <TextView
            android:text="More Features"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- You can place grid layout or horizontal LinearLayouts for those feature icons -->

        <!-- Need Help Section -->
        <TextView
            android:text="Need Help?"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FAQ\nEmail Support\nHelp Center\nVideo Tutorials"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="#444" />

        <!-- Version and Footer -->
        <TextView
            android:text="Version 2.1.0\nLast Updated: March 2024"
            android:textSize="12sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Privacy Policy   Terms of Service   Data Usage"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#448AFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
