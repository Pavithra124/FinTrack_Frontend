<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/rating_pic"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enjoying the app?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="12dp"/>

        <!-- Subtitle lines -->
        <TextView
            android:id="@+id/textViewSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We'd love to hear your thoughts!"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/textViewSubtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your feedback helps us improve."
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="20dp"/>

        <!-- Star Rating Bar -->
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:layout_marginBottom="6dp"
            style="?android:attr/ratingBarStyleIndicator" />

        <TextView
            android:id="@+id/textViewRatingHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to rate"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="28dp"/>

        <!-- Submit button -->
        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Submit Rating"
            android:textAllCaps="false"
            android:backgroundTint="#1E88E5"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Maybe later button -->
        <Button
            android:id="@+id/buttonMaybeLater"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Maybe later"
            android:textAllCaps="false"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>
