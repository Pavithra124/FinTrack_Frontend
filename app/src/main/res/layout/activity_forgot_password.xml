<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="48dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email to receive a verification code"
            android:textSize="14sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="8dp"
            android:gravity="center" />

        <!-- Email Input with icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/googlebg"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/maillogo"
                android:contentDescription="Email icon"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Enter your email address"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Send Verification Code Button -->
        <Button
            android:id="@+id/btnSendCode"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Send Verification Code"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E50FF"
            android:layout_marginTop="24dp" />

        <!-- Login link -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember your password? Login"
            android:textSize="14sp"
            android:textColor="#0066FF"
            android:layout_marginTop="16dp" />

        <!-- Info with lock icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/locklogo"
                android:contentDescription="Lock icon"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We'll send a verification code to your email"
                android:textSize="12sp"
                android:textColor="#7A7A7A" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
